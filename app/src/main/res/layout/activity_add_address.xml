<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddAddressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical"
                android:id="@+id/topLayout"
                android:background="@drawable/blackwhitefillborder">

                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameEditText"
                    android:padding="10dp"
                    android:hint="Full name"
                    android:inputType="text"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobileEditText"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:hint="Mobile No."
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pincodeEditText"
                    android:padding="10dp"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/flatEditText"
                    android:padding="10dp"
                    android:inputType="text"
                    android:hint="Flat , House no., Building, Company, Apartment"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>

                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/areaEditText"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Area, Colony, Street, Sector, Village"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/landmarkEditText"
                    android:padding="10dp"
                    android:inputType="text"
                    android:hint="Landmark e.g. near apollo hospital"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cityEditText"
                    android:padding="10dp"
                    android:inputType="text"
                    android:hint="Town/City"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stateEditText"
                    android:padding="10dp"
                    android:hint="State"
                    android:inputType="text"
                    android:background="@drawable/delblackborder"
                    android:textSize="14sp"/>


            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/delivernotavailable"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_below="@+id/topLayout"
                android:gravity="center"
                android:text="Sorry Delivery not availbale in this area contact to admin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deliverTextView"
                android:background="@drawable/deliveryaddressbackground"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/delivernotavailable"
                android:gravity="center"
                android:text="Visit to this Address"/>


        </RelativeLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>